{
  "clearMocks": true,
  "coverageProvider": "v8",
  "moduleFileExtensions": ["js", "ts"],

  "roots": ["<rootDir>"],

  "testMatch": ["**/tests/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/tests/connect-db-for-testing.ts"
  ]
}
